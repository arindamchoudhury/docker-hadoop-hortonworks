#core-site.xml
IO_FILE_BUFFER_SIZE=131072

#hdfs-site.xml
DFS_REPLICATION=2
DFS_NAMEDIR=/var/data/hadoop/hdfs/nn
FS_CHECKPOINT_DIR=/var/data/hadoop/hdfs/snn
DFS_DATANODE_DATA_DIR=/var/data/hadoop/hdfs/dn
DFS_NAMENODE_HANDLER_COUNT=100
DFS_BLOCKSIZE=268435456

#hadoop-env.sh
JAVA_HOME=/usr/local/jdk1.7.0_80
HADOOP_HOME=/usr/local/hadoop-2.7.2
HADOOP_CONF_DIR=/usr/local/hadoop-2.7.2/etc/hadoop
HADOOP_HEAPSIZE=1024
HADOOP_NAMENODE_INIT_HEAPSIZE=1024m
LOG_DIR=/var/log/hadoop

#yarn-env.sh
YARN_HEAPSIZE=1024
YARN_RESOURCEMANAGER_HEAPSIZE=1024
YARN_NODEMANAGER_HEAPSIZE=1000

#mapred-env.sh
HADOOP_JOB_HISTORYSERVER_HEAPSIZE=100

#hive-env.sh
HIVE_CONF_DIR=/usr/local/apache-hive-1.2.1-bin/conf